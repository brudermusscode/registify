<div class="text-center">
  <h3><%= t('administration.admins.headlines.login') %></h3>
</div>
<div class="card">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="field mb-3">
        <%= f.label :login, t('activerecord.attributes.admin.login'), class: 'form-label' %><br />
        <%= f.text_field :login, autofocus: true, class: 'form-control' %>
      </div>
      <div class="field mb-3">
        <%= f.label :password, t('activerecord.attributes.admin.password'), class: 'form-label' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field mb-3 mt-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, t('activerecord.attributes.admin.stay_logged_in'), style: 'margin-left:1em;' %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit t('buttons.sign_in'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
