<!DOCTYPE html>
<html>
  <head>
    <title>Kundeportal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- MATERIAL ICONS -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- STYLESHEETS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@200;400;700&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <!-- SCRIPTS -->
    <%= javascript_importmap_tags %>
    <!-- STUFF -->
    <% if admin_signed_in?%>
      <style>
        body { background:#EDE7F6; }
      </style>
    <% end %>
  </head>
  <body>
    <app>
      <%= render 'shared/flash' %>
      <% if params[:controller].match(/^(profiles\/lists)/) && params[:id] %>
        <%= render 'shared/lists/list_hdr' %>
        <%= render 'profiles/lists/left_overview', resource: @list %>
        <%= render 'shared/lists/list_main' %>
      <% else %>
        <%= render 'shared/hdr' %>
        <%= render 'shared/main' %>
      <% end %>
    </app>
  </body>
</html>
