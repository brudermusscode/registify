<div class="card mb-2">
  <%= render 'manage/admins/lists/dropdown_actions', resource: resource %>
  <div class="card-body">
    <div class="d-flex justify-content-between trimt" style="width:calc(100% - 2em);">
      <strong><%= resource.name %></strong>
    </div>
    <div class="mt-2">
      <div class="model-link trimt">📍 <%= link_to resource.ownable.username, [resource.ownable.profile] %></div>
    </div>
    <div class="trimt mt-1">
      <span style="font-size:.8em;color:rgba(0,0,0,.24);">Vor <strong><%= distance_of_time_in_words Time.now, resource.updated_at %></strong> bearbeitet</span>
    </div>
  </div>
</div>
