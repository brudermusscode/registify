<%= render 'manage/shared/breadcrumps' %>
<div class="cl"></div>
<div class="card">
  <div class="card-body">
    <%= form_for @admin, url: [:manage, @admin] do |f| %>
      <%= render "manage/shared/errors", resource: @admin %>
      <div class="field mb-3 flex-fill">
        <%= f.label :username, I18n.t('activerecord.attributes.admin.username') + ' *', class: 'form-label' %>
        <%= f.text_field :username, autofocus: true, class: 'form-control' %>
      </div>
      <div class="d-flex align-self-stretch gap-3">
        <div class="field mb-3 flex-fill">
          <%= f.label :firstname, t('activerecord.attributes.admin.firstname') + ' *', class: 'form-label' %>
          <%= f.text_field :firstname, autofocus: true, class: 'form-control' %>
        </div>
        <div class="field mb-3 flex-fill">
          <%= f.label :lastname, I18n.t('activerecord.attributes.admin.lastname') + ' *', class: 'form-label' %>
          <%= f.text_field :lastname, class: 'form-control' %>
        </div>
      </div>
      <div class="field mb-3">
        <%= f.label :email, t('activerecord.attributes.admin.email') + ' *', class: 'form-label' %>
        <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
      </div>
      <div class="field mb-3">
        <%= f.label :born_at, t('activerecord.attributes.admin.birthday'), class: 'form-label' %>
        <%= f.date_field :born_at, class: 'form-control' %>
      </div>
      <div class="field mb-3">
        <%= f.label :street, t('activerecord.attributes.admin.street'), class: 'form-label' %>
        <%= f.text_field :street, class: 'form-control' %>
      </div>
      <div class="d-flex align-self-stretch gap-3">
        <div class="field mb-3 flex-fill">
          <%= f.label :postcode, t('activerecord.attributes.admin.postcode'), class: 'form-label' %>
          <%= f.text_field :postcode, class: 'form-control' %>
        </div>
        <div class="field mb-3 flex-fill">
          <%= f.label :city, t('activerecord.attributes.admin.city'), class: 'form-label' %>
          <%= f.text_field :city, class: 'form-control' %>
        </div>
      </div>
      <!--- TODO: implement password reset with random token and email --->
      <div class="actions mt-3">
        <%= f.submit t('buttons.save'), class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
<div class="actions mt-3 pt-3 d-flex justify-content-center" style="border-top:1px solid rgba(0,0,0,.12);">
  <%= render 'manage/admins/actions', resource: @admin %>
</div>
