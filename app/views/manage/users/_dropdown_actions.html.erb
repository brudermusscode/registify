<dropdown-menu class="floats right">
  <span class="material-icons md-24">more_vert</span>
  <menu>
    <ul class="std">
      <li><%= link_to '✏️ ' + t('buttons.edit'), [:edit, :manage, resource] %></li>
      <% if resource.freed? %>
        <% if !resource.activated? %>
          <li><%= button_to '🌖 ' + t('buttons.activate'), [:approve, :manage, resource], method: :patch %></li>
        <% else %>
          <li><%= button_to '🌒 ' + t('buttons.deactivate'), [:approve, :manage, resource], method: :patch %></li>
        <% end %>
        <% if resource.locked? %>
          <li><%= button_to '✅ ' + t('buttons.unlock'), [:lock, :manage, resource], method: :patch %></li>
        <% end %>
      <% else %>
        <% if resource.confirmed? %>
          <li><%= button_to '✅ ' + t('buttons.free'), [:free, :manage, resource], method: :patch %></li>
        <% end %>
        <li class="disabled">
          <a>🌒 <%= t('buttons.deactivate') %></a>
        </li>
      <% end %>
      <li><%= button_to '❌ ' + t('buttons.delete'), [:manage, resource], method: :delete, data: { confirm: "Are you sure?" } %></li>
      <div style="border-top:1px solid rgba(0,0,0,.05);margin:.8em 0;"></div>
      <li>
        <%= link_to '➕ ' + t('buttons.list.create'), [:new, :manage, resource, :list] %>
      </li>
      <div style="border-top:1px solid rgba(0,0,0,.05);margin:.8em 0;"></div>
      <li><%= link_to '📔 ' + t('buttons.lists'), [:manage, resource, :lists] %></li>
    </ul>
  </menu>
</dropdown-menu>
