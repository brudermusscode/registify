<%= render 'manage/shared/breadcrumps' %>
<div class="d-flex justify-content-end align-items-start mb-3 rt">
  <%= link_to t('buttons.add'), [:new, :manage, :user], class: 'btn btn-primary btn-sm' %>
</div>
<div class="cl"></div>
<div class="d-flex justify-content-start flex-wrap gap-1">
  <% if @users.any? %>
    <% @users.each do |user| %>
      <div style="flex-basis: 49.6%; width: 49.6%;">
        <%= render user, resource: user %>
      </div>
    <% end %>
  <% else %>
    <div class="card w-100">
      <div class="card-body text-center">
        <span><%= t('administration.fields.user.none') %></span>
      </div>
    </div>
  <% end %>
</div>
