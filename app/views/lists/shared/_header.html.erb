<div class="d-flex justify-content-between align-items-start">
  <h3>Alle Listen (<%= @lists.count %>)</h3>
  <% if params[:controller] == 'lists/users' %>
    <%= link_to I18n.t('buttons.add'), users_lists_new_path, class: 'btn btn-primary' %>
  <% else %>
    <%= link_to I18n.t('buttons.add'), admins_lists_new_path, class: 'btn btn-primary' %>
  <% end %>
</div>
<div class="d-flex justify-content-start mb-3 gap-1">
  <% if params[:controller] == 'lists/users' %>
    <%= link_to 'Kunden', users_lists_path, class: 'btn btn-warning' %>
    <%= link_to 'Administratoren', admins_lists_path, class: 'btn btn-outline-warning' %>
  <% else %>
    <%= link_to 'Kunden', users_lists_path, class: 'btn btn-outline-warning' %>
    <%= link_to 'Administratoren', admins_lists_path, class: 'btn btn-warning' %>
  <% end %>
</div>
