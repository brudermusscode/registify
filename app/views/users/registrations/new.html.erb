<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="page-hdr bg">
    <div class="icon">🦦</div>
    <div class="text"><%= t('buttons.sign_up') %></div>
  </div>
  <div class="card">
    <div class="inr">
      <div class="mb24 field">
        <%= f.label :username, '📍 ' + t('activerecord.attributes.user.username') + ' *', class: 'input-label' %>
        <%= f.text_field :username, autofocus: true, class: 'slight-input dark' %>
      </div>
      <div class="mb24 field">
        <%= f.label :email, '📧 ' + t('activerecord.attributes.user.email') + ' *', class: 'input-label' %>
        <%= f.email_field :email, autocomplete: "email", class: 'slight-input dark' %>
      </div>
      <div class="mb24 field">
        <%= f.label :born_at, '🤱🏽 ' + t('activerecord.attributes.user.birthday'), class: 'input-label' %>
        <%= f.date_field :born_at, class: 'slight-input dark' %>
      </div>
      <div class="mb24 field">
        <%= f.label :password, '🔑 ' + t('activerecord.attributes.user.password') + ' *', class: 'input-label' %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'slight-input dark' %>
        <% if @minimum_password_length %>
          <div class="keyboard-key mt12"><%= @minimum_password_length %> <%= t('fields.password_minimum_characters') %></div>
        <% end %>
      </div>
      <div class="mb24 field">
        <%= f.label :password_confirmation, '🔓 ' + t('activerecord.attributes.user.password_confirmation') + ' *', class: 'input-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'slight-input dark' %>
      </div>
      <div class="lt">
        <p><%= t('fields.required') %></p>
      </div>
      <div class="rt">
        <%= f.submit t('buttons.sign_up'), class: 'btn green light shd-hover' %>
      </div>
      <div class="cl"></div>
    </div>
  </div>
<% end %>
<% if !admin_signed_in? %>
  <%= render "users/shared/links" %>
<% end %>
