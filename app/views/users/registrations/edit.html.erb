<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
  <div class="page-hdr bg">
    <div class="icon">ðŸ¦„</div>
    <div class="text"><%= t('navigation.settings') %></div>
  </div>
  <div class="card">
    <div class="inr">
      <div class="field mb24">
        <%= f.label :username, 'ðŸ“ ' + t('activerecord.attributes.user.username') + ' *', class: 'input-label' %>
        <%= f.text_field :username, class: 'slight-input dark' %>
      </div>
      <div class="field mb24">
        <%= f.label :email, 'ðŸ“§ ' + t('activerecord.attributes.user.email') + ' *', class: 'input-label' %>
        <%= f.email_field :email, autocomplete: "email", class: 'slight-input dark' %>
      </div>
      <div class="field mb24">
        <%= f.label :born_at, 'ðŸ¤±ðŸ½ ' + t('activerecord.attributes.user.born_at'), class: 'input-label' %>
        <%= f.date_field :born_at, class: 'slight-input dark' %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="field mb24">
        <%= f.label :password, 'ðŸ”‘ ' + t('activerecord.attributes.user.new_password'), class: 'input-label' %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'slight-input dark' %>
