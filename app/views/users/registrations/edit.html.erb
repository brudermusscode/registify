          <div class="keyboard-key mt12"><%= @minimum_password_length %> <%= t('fields.password_minimum_characters') %></div>
        <% end %>
      </div>
      <div class="field mb24">
        <%= f.label :password_confirmation, 'ðŸ”“ ' + t('activerecord.attributes.user.new_password_confirmation'), class: 'input-label' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'slight-input dark' %>
      </div>
      <div class="field mb24" style="margin-left:-2.4em;background:var(--color-orange-verylight);padding:1.4em 2.4em;width:calc(100% + 4.8em);">
        <%= f.label :current_password, 'ðŸ” ' + t('activerecord.attributes.user.current_password') + ' *', class: 'input-label' %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'slight-input dark' %>
        <div class="keyboard-key mt12"><%= t('fields.password_current_explanation') %></div>
      </div>
      <div class="lt">
        <p><%= t('fields.required') %></p>
      </div>
      <div class="rt">
        <%= f.submit t('buttons.save'), class: 'btn green light shd-hover' %>
      </div>
      <div class="cl"></div>
    </div>
  </div>
<% end %>
