<div class="text-center">
  <h3><%= I18n.t('buttons.no_unlock_mail') %></h3>
</div>
<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="field mb-3">
    <%= f.label :email, I18n.t('activerecord.attributes.user.email'), class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>
  <div class="actions mt-3 mb-3">
    <%= f.submit I18n.t('buttons.unlock_mail_submit'), class: 'btn btn-primary' %>
  </div>
<% end %>
<%= render "users/shared/links" %>
